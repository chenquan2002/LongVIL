<robot name="corn">
  <link name="body">
    <visual>
      <geometry>
        <mesh filename="corn_body.obj" scale="0.02 0.02 0.02"/>
      </geometry>
      <material name="Yellow">
        <color rgba="0.854993 0.495224 0.000000 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.04"/> <!-- 使用立方体作为简化的碰撞体 -->
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/> <!-- 设置质量为0.1单位 -->
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/> <!-- 简单的惯性矩阵 -->
    </inertial>
  </link>

  <link name="leaf">
    <visual>
      <geometry>
        <mesh filename="corn_leaf.obj" scale="0.025 0.025 0.025"/>
      </geometry>
      <material name="Green">
        <color rgba="0.181697 0.527584 0.000000 1.0"/> 
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.01"/> <!-- 使用更小的立方体作为简化的碰撞体 -->
      </geometry>
    </collision>
    <inertial>
      <mass value="0.02"/> <!-- 叶子的质量设置为较小的值 -->
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/> <!-- 简单的惯性矩阵 -->
    </inertial>
  </link>

  <!-- 将叶子连接到主体 -->
  <joint name="body_to_leaf" type="fixed">
    <parent link="body"/>
    <child link="leaf"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
  </joint>
</robot>